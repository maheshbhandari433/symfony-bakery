{% extends 'base.html.twig' %}

{% block title %}Contact Us{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
    .contact-section {
        background-color: #f5f5f5;
        padding-top: 30px;
    }
    .contact-form {
        max-width: 400px;
        margin: 0 auto;
    }
     </style>
{% endblock %}

{% block navbarBackgroundColor %}
    #E3D8F8
{% endblock %}

{% block body %}

    {{ parent() }}

    <section class="contact-section my-5">
        <div class="container">
            <h2 class="text-center mb-3">Contact Us</h2>
            <div class="contact-form">
                <form id="contactForm" novalidate>
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                        <div class="invalid-feedback">Please enter your name.</div>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                        <div class="invalid-feedback">Please enter a valid email address.</div>
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">Message</label>
                        <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                        <div class="invalid-feedback">Please enter a message.</div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
                <div class="success-message mt-3 text-center d-none">Thank you for your message. We will get back to you soon!</div>
            </div>
        </div>
    </section>

    <script>
        // Form validation using JavaScript
        document.getElementById('contactForm').addEventListener('submit', function(event) {
            event.preventDefault();
            if (this.checkValidity()) {
                // Form is valid, submit the data or show a success message
                showSuccessMessage();
            } else {
                // Form is invalid, display validation errors
                this.classList.add('was-validated');
            }
        });

        // Function to show success message and hide the form
        function showSuccessMessage() {
            document.getElementById('contactForm').classList.add('d-none');
            document.querySelector('.success-message').classList.remove('d-none');
        }
    </script>

{% endblock %}

